<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/selectBackgroundColour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change colour"
            app:layout_constraintBottom_toTopOf="@id/selectBackgroundColourAlpha"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/selectBackgroundColourAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change colour with alpha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectBackgroundColour"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/changeThisColour"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@mipmap/ic_launcher" tools:layout_editor_absoluteY="70dp"
            tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>